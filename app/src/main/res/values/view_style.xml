<resources>
    <!--输入框默认-->
    <style name="EtitTextDefult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/widget_size_45</item>
        <item name="android:background">@drawable/shape_e3e3e3_dark_5</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <!--按钮默认样式-->
    <style name="ButtonDefult" parent="EtitTextDefult">
        <item name="android:layout_marginLeft">@dimen/widget_size_30</item>
        <item name="android:layout_marginRight">@dimen/widget_size_30</item>
        <item name="android:background">@drawable/shape_btn_dark</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
    </style>

    <!--分割线-->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--默认带有间距-->
    <style name="EtitTextMargin" parent="EtitTextDefult">
        <item name="android:layout_marginLeft">@dimen/widget_size_30</item>
        <item name="android:layout_marginRight">@dimen/widget_size_30</item>
        <item name="android:layout_marginTop">@dimen/widget_size_20</item>
    </style>

    <!-- *************************************************  -->

    <!--注册界面-->
    <style name="RegistDefult" parent="EtitTextMargin"></style>

    <!--分我的电站item-->
    <style name="ItemPowerStationKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="ItemPowerStationMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--登陆界面-->
    <style name="LoginDefult" parent="EtitTextMargin"></style>

    <style name="LoginBtton" parent="ButtonDefult">
        <item name="android:layout_marginLeft">@dimen/widget_size_30</item>
        <item name="android:layout_marginRight">@dimen/widget_size_30</item>
        <item name="android:layout_marginTop">@dimen/widget_size_20</item>
    </style>

    <!---->
    <style name="UserInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_size_45</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:drawablePadding">@dimen/widget_size_10</item>
        <item name="android:paddingLeft">@dimen/widget_size_16</item>
        <item name="android:paddingRight">@dimen/widget_size_16</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--StationDetailActivity-->
    <style name="DetalItemRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="DetalItemLeft">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="DetalItemBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:background">@drawable/shape_e3e3e3_dark_5</item>
    </style>
    <!--BatteryDetailActivity-->

    <style name="DetalItemRight11" parent="DetalItemRight">
        <item name="android:textSize">@dimen/font_size_11</item>
    </style>

    <style name="DetalItemLeft11" parent="DetalItemLeft">
    <item name="android:textSize">@dimen/font_size_11</item>
</style>

    <style name="StationItemTitle" parent="DetalItemLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_marginLeft">@dimen/widget_size_12</item>
        <item name="android:layout_marginRight">@dimen/widget_size_12</item>
        <item name="android:layout_marginTop">@dimen/widget_size_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:textColor">#ff747474</item>
    </style>

</resources>