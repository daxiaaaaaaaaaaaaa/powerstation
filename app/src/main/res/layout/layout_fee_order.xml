<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_54">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text"
            android:text="费用详情："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40">
            <TextView
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_14"
                android:text="配件费："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_accessories_fee"
                android:layout_marginLeft="@dimen/widget_size_105"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_two"
                android:textSize="@dimen/font_size_14"
                tools:text="¥100.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40">
            <TextView
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_14"
                android:text="服务费："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_service_fee"
                android:layout_marginLeft="@dimen/widget_size_105"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_two"
                android:textSize="@dimen/font_size_14"
                tools:text="¥100.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40">
            <TextView
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_14"
                android:text="优惠："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_preferential"
                android:layout_marginLeft="@dimen/widget_size_105"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_two"
                android:textSize="@dimen/font_size_14"
                tools:text="¥100.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40">
            <TextView
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_14"
                android:text="挂帐："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_this_card"
                android:layout_marginLeft="@dimen/widget_size_105"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_two"
                android:textSize="@dimen/font_size_14"
                tools:text="¥100.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
