<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:padding="16dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/widget_size_70"
        android:layout_height="@dimen/widget_size_70"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_70"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_20"
            android:layout_toRightOf="@+id/connected_device_cover"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="Amerike Lifetime PV production"
            android:textColor="@color/color_black" />


        <LinearLayout
            android:id="@+id/ll_item_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_msg1"
                style="@style/ItemPowerStationKey"
                android:layout_below="@+id/connected_device_title"
                android:layout_toRightOf="@+id/connected_device_cover"
                android:text="Charging power:" />

            <TextView
                android:id="@+id/tv_one"
                style="@style/ItemPowerStationMsg"
                android:layout_width="match_parent"
                android:layout_below="@+id/connected_device_title"
                android:layout_toRightOf="@+id/connected_device_day_key"
                tools:text="100KWH" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_msg2"
                style="@style/ItemPowerStationKey"
                android:layout_below="@+id/connected_device_day_key"
                android:layout_toRightOf="@+id/connected_device_cover"
                android:text="SOC:" />

            <TextView
                android:id="@+id/tv_two"
                style="@style/ItemPowerStationMsg"
                android:layout_below="@+id/connected_device_day_key"
                android:layout_toRightOf="@+id/connected_device_lifetime_key"
                tools:text="100KWH" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
