<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Site Operating Mode" />

                <TextView
                    android:id="@+id/tv_site_value"
                    style="@style/SiteEditTextStytle"
                    android:drawableRight="@drawable/image_right"
                    android:drawablePadding="8dp"
                    android:text="Spontaneous use" />
            </LinearLayout>

            <View
                android:id="@+id/view_lint"
                style="@style/LineHorizontal"
                android:layout_marginLeft="@dimen/widget_size_15" />

            <LinearLayout
                android:id="@+id/ll_site"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Please input limit SOC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|right"
                    android:text="%" />
            </LinearLayout>

            <View style="@style/LineHorizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/site_title1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_13"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/widget_size_10"
            android:layout_marginRight="@dimen/widget_size_15"
            android:text="Staggered peak power 1"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_site1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Charging power" />

                <TextView
                    android:id="@+id/et_site_value1"
                    style="@style/SiteEditTextStytle"
                    android:hint="Please input power" />
            </LinearLayout>

            <View
                style="@style/LineHorizontal"
                android:layout_marginLeft="@dimen/widget_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Start time:" />

                <TextView
                    android:id="@+id/tv_site_startime1"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="End time:" />

                <TextView
                    style="@style/SiteTextTimeStytle"
                    android:id="@+id/tv_site_endtime1"
                    android:text="00:00" />
            </LinearLayout>

            <View style="@style/LineHorizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_site2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Discharge power" />

                <EditText
                    android:id="@+id/et_site_value2"
                    style="@style/SiteEditTextStytle"
                    android:hint="Please input power" />
            </LinearLayout>

            <View
                style="@style/LineHorizontal"
                android:layout_marginLeft="@dimen/widget_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Start time:" />

                <TextView
                    android:id="@+id/tv_site_startime2"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="End time:" />

                <TextView
                    android:id="@+id/tv_site_endtime2"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />
            </LinearLayout>

            <View style="@style/LineHorizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/site_title2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_13"
            android:layout_marginLeft="@dimen/widget_size_15"
            android:layout_marginTop="@dimen/widget_size_10"
            android:layout_marginRight="@dimen/widget_size_15"
            android:text="Staggered peak power 2"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_site3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Charging power" />

                <EditText
                    android:id="@+id/et_site_value3"
                    style="@style/SiteEditTextStytle"
                    android:hint="Please input power" />
            </LinearLayout>

            <View
                style="@style/LineHorizontal"
                android:layout_marginLeft="@dimen/widget_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Start time:" />

                <TextView
                    android:id="@+id/tv_site_startime3"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="End time:" />

                <TextView
                    android:id="@+id/tv_site_endtime3"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />
            </LinearLayout>

            <View style="@style/LineHorizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_site4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Discharge power" />

                <EditText
                    android:id="@+id/et_site_value4"
                    style="@style/SiteEditTextStytle"
                    android:hint="Please input power" />
            </LinearLayout>

            <View
                style="@style/LineHorizontal"
                android:layout_marginLeft="@dimen/widget_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/widget_size_16"
                android:paddingRight="@dimen/widget_size_16">

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="Start time:" />

                <TextView
                    android:id="@+id/tv_site_startime4"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />

                <TextView
                    style="@style/SiteTextValueStytle"
                    android:text="End time:" />

                <TextView
                    android:id="@+id/tv_site_endtime4"
                    style="@style/SiteTextTimeStytle"
                    android:text="00:00" />
            </LinearLayout>

            <View style="@style/LineHorizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>