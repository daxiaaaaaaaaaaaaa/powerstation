<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:paddingTop="36dp"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/widget_size_85"
            android:layout_height="@dimen/widget_size_85"
            android:layout_centerInParent="true"
            android:src="@drawable/image_login_logo"/>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView

                android:layout_width="@dimen/widget_size_16"
                android:layout_height="@dimen/widget_size_16"
                android:layout_centerInParent="true"
                android:background="@drawable/image_close"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_56">

            <ImageView
                android:layout_width="@dimen/widget_size_15"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/image_login_phone"/>

            <com.jilian.powerstation.views.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_16"/>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_56">

            <ImageView
                android:layout_width="@dimen/widget_size_15"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/image_login_pwd"/>

            <com.jilian.powerstation.views.ClearEditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColorHint="@color/color_text_hint"
                android:textColor="@color/color_text"
                android:textSize="@dimen/font_size_16"/>

            <RelativeLayout
                android:id="@+id/rl_eye"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_eye"
                    android:layout_width="@dimen/widget_size_21"
                    android:layout_height="@dimen/widget_size_14"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_login_close"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/color_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="注册账号"
                android:textColor="#65c1c9"
                android:textSize="@dimen/font_size_14"/>
            <TextView
                android:id="@+id/tv_login_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:text="忘记密码"
                android:textColor="#65c1c9"
                android:textSize="@dimen/font_size_14"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/shape_btn_login_dark"
            android:enabled="false"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />





    </LinearLayout>

</LinearLayout>
