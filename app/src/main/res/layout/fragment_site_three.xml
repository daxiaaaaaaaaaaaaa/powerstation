<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_linechar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_80"
            android:layout_marginLeft="@dimen/widget_size_12"
            android:layout_marginRight="@dimen/widget_size_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/widget_size_3"
                android:layout_weight="1"
                android:background="@drawable/share_main_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PV (kwh)" />

                <TextView
                    style="@style/SiteTextStyle"
                    android:text="30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/widget_size_3"
                android:layout_weight="1"
                android:background="@drawable/share_main_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Load (kwh)" />

                <TextView
                    style="@style/SiteTextStyle"
                    android:text="30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_80"
            android:layout_marginLeft="@dimen/widget_size_12"
            android:layout_marginRight="@dimen/widget_size_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/widget_size_3"
                android:layout_weight="1"
                android:background="@drawable/share_main_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month bill saving ($)" />

                <TextView
                    style="@style/SiteTextStyle"
                    android:text="30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/widget_size_3"
                android:layout_weight="1"
                android:background="@drawable/share_main_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month CO₂ Reduced（kg)" />

                <TextView
                    style="@style/SiteTextStyle"
                    android:text="30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>