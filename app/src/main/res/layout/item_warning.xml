<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_130"
    android:orientation="vertical"
    android:background="@drawable/selector_device_warning_bg"
    android:paddingLeft="@dimen/widget_size_15"
    android:paddingTop="@dimen/widget_size_20"
    android:paddingRight="@dimen/widget_size_15"
    android:paddingBottom="@dimen/widget_size_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Device name:"
            android:textColor="#ff222222"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/widget_size_5"
            android:gravity="center_vertical"
            android:text="Inverter"
            android:textColor="#ff222222"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_18"
        android:layout_marginTop="@dimen/widget_size_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Current Alarm："
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="type1"
            android:textColor="#ff999999"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_18"
        android:layout_marginTop="@dimen/widget_size_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Historical warning："
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="type1"
            android:textColor="#ff999999"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_18"
        android:layout_marginTop="@dimen/widget_size_6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Update time："
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2019/04/21 14:30:25"
            android:textColor="#ff999999"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>