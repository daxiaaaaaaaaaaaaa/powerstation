<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_line"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:text="VoltResponseMode"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_size_14"/>

        <TextView
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/widget_size_15"
            android:drawableRight="@drawable/image_right"
            android:drawablePadding="@dimen/widget_size_10"
            android:gravity="right"
            android:text="SystemWaitMode"
            android:textColor="#999999"
            android:textSize="@dimen/widget_size_16"/>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_size_16"
            android:text="Power factor"
            android:textColor="@color/color_text"
            android:textSize="@dimen/font_size_14"/>

        <EditText
            android:id="@+id/tv_02"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/widget_size_30"
            android:background="@null"
            android:drawablePadding="@dimen/widget_size_10"
            android:hint="-0.8ï½ž0.8"
            android:inputType="number"
            android:textColor="#999999"
            android:textSize="@dimen/widget_size_12"/>


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/widget_size_10"
            android:drawablePadding="@dimen/widget_size_10"
            android:text="W"
            android:textColor="@color/color_text"
            android:textSize="@dimen/widget_size_16"/>

    </RelativeLayout>
</LinearLayout>
